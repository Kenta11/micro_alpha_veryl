module micro_alpha (
    clk     : input  clock                      ,
    rst     : input  reset                      ,
    cm_addr : output micro1_control_address_t   ,
    cm_data : input  micro1_control_word_t      ,
    mm_addr : output micro1_machine_address_t   ,
    mm_we   : output logic                      ,
    mm_din  : input  micro1_machine_word_t      ,
    mm_dout : output micro1_machine_word_t      ,
    if_dout : input  logic                   <8>,
    if_empty: input  logic                      ,
    if_re   : output logic                      ,
    of_din  : output logic                   <8>,
    of_full : input  logic                      ,
    of_we   : output logic                      ,
    led_hlt : output logic                      ,
    led_ov  : output logic                      ,
) {
    // imports
    import machine_data_pkg::*;
    import control_data_pkg::*;

    // registers and wires
    inst c_if: control_if;

    // modules
    inst controler0: controler #(
        ENTRY_POINT: 12'h101,
    ) (
        clk     : clk     ,
        rst     : rst     ,
        c_if    : c_if    ,
        cm_addr : cm_addr ,
        cm_din  : cm_data ,
        mm_we   : mm_we   ,
        if_empty: if_empty,
        if_re   : if_re   ,
        of_full : of_full ,
        of_we   : of_we   ,
        led_hlt : led_hlt ,
        led_ov  : led_ov  ,
    );

    inst datapath0: datapath (
        clk    : clk    ,
        rst    : rst    ,
        c_if   : c_if   ,
        mm_addr: mm_addr,
        mm_din : mm_din ,
        mm_dout: mm_dout,
        if_dout: if_dout,
        of_din : of_din ,
    );
}
